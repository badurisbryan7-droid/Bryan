    <script>
        const horarioPadrao = [
            ['Português', 'Matemática', 'Geografia', 'Ciências', 'História'],
            ['Inglês', 'Ed. Física', 'Arte', 'Português', 'Matemática'],
            ['INTERVALO', 'INTERVALO', 'INTERVALO', 'INTERVALO', 'INTERVALO'],
            ['Ciências', 'Matemática', 'Geografia', 'Português', 'Ed. Física'],
            ['História', 'Português', 'Inglês', 'Arte', 'Ciências'],
            ['Matemática', 'Geografia', 'História', 'Ciências', 'Português'],
            ['Português', 'Matemática', 'HTPC', 'Geografia', 'Matemática']
        ];

        const horariosTurmas = {
            '6a': {
                nome: '6º Ano A',
                sala: 'Sala 7',
                horarios: horarioPadrao
            },
            '6b': {
                nome: '6º Ano B',
                sala: 'Sala 8',
                horarios: horarioPadrao
            },
            '6c': {
                nome: '6º Ano C',
                sala: 'Sala 9',
                horarios: horarioPadrao
            },
            '7a': {
                nome: '7º Ano A',
                sala: 'Sala 10',
                horarios: horarioPadrao
            },
            '7b': {
                nome: '7º Ano B',
                sala: 'Sala 11',
                horarios: horarioPadrao
            },
            '7c': {
                nome: '7º Ano C',
                sala: 'Sala 12',
                horarios: horarioPadrao
            },
            '8a': {
                nome: '8º Ano A',
                sala: 'Sala 13',
                horarios: horarioPadrao
            },
            '8b': {
                nome: '8º Ano B',
                sala: 'Sala 14',
                horarios: horarioPadrao
            },
            '8c': {
                nome: '8º Ano C',
                sala: 'Sala 14',
                horarios: horarioPadrao
            },
            '9a': {
                nome: '9º Ano A',
                sala: 'Sala 15',
                horarios: horarioPadrao
            },
            '9b': {
                nome: '9º Ano B',
                sala: 'Sala 16',
                horarios: horarioPadrao
            },
            '9c': {
                nome: '9º Ano C',
                sala: 'Sala 17',
                horarios: horarioPadrao
            }
        };

        const turmas = document.querySelectorAll('.turma-seletor');
        const tabelaHorarios = document.getElementById('tabela-horarios');
        const turmaAtualH2 = document.getElementById('turma-atual');
        const salaTurmaSpan = document.getElementById('sala-turma');
        const totalAulasSpan = document.getElementById('total-aulas');
        
        let turmaAtiva = '7c';

        function renderizarTabela(turma) {
            const dadosTurma = horariosTurmas[turma];
            if (!dadosTurma) {
                // Se a turma não tiver dados, limpa a tabela
                tabelaHorarios.querySelector('tbody').innerHTML = '';
                turmaAtualH2.textContent = '';
                salaTurmaSpan.textContent = '';
                totalAulasSpan.textContent = '0';
                return;
            }
            
            turmaAtualH2.textContent = dadosTurma.nome;
            salaTurmaSpan.textContent = dadosTurma.sala;

            let totalAulas = 0;
            let tbodyHtml = '';
            
            const horarios = [
                '13:00 - 13:45',
                '13:45 - 14:30',
                '14:30 - 14:50', // Intervalo
                '14:50 - 15:35',
                '15:35 - 16:20',
                '16:20 - 17:05',
                '17:05 - 17:50'
            ];

            if (dadosTurma.horarios.length > 0) {
              dadosTurma.horarios.forEach((dia, index) => {
                  const horarioAtual = horarios[index];
                  tbodyHtml += `<tr class="border-b border-gray-200 hover:bg-gray-50 hover-scale animate-fade-in" style="animation-delay: ${0.4 + index * 0.1}s;">`;
                  tbodyHtml += `<td class="px-6 py-3 text-sm font-medium text-gray-700">${horarioAtual}</td>`;
                  
                  dia.forEach(materia => {
                      const materiaClass = materia === 'INTERVALO' ? 'materia-intervalo' : `materia-${materia.toLowerCase().replace('.', '')}`;
                      const textoMateria = materia === 'INTERVALO' ? 'Intervalo' : materia;
                      
                      if (materia !== 'INTERVALO') {
                          totalAulas++;
                      }

                      tbodyHtml += `<td class="px-6 py-3 text-center font-bold text-white rounded-md shadow-md hover-scale ${materiaClass}">${textoMateria}</td>`;
                  });

                  tbodyHtml += `</tr>`;
              });
            } else {
              tbodyHtml = `<tr class="border-b border-gray-200"><td colspan="6" class="px-6 py-12 text-center text-gray-500 font-semibold">Nenhum horário disponível para esta turma.</td></tr>`;
            }
            
            tabelaHorarios.querySelector('tbody').innerHTML = tbodyHtml;
            totalAulasSpan.textContent = totalAulas;
        }

        turmas.forEach(botao => {
            botao.addEventListener('click', () => {
                turmas.forEach(b => b.classList.remove('turma-ativa'));
                botao.classList.add('turma-ativa');
                turmaAtiva = botao.dataset.turma;
                renderizarTabela(turmaAtiva);
            });
        });

        // Selecionar a turma padrão na primeira carga
        document.addEventListener('DOMContentLoaded', () => {
            const turmaPadrao = '7c';
            const botaoPadrao = document.querySelector(`[data-turma="${turmaPadrao}"]`);
            if (botaoPadrao) {
                botaoPadrao.click();
            } else {
                renderizarTabela(turmaPadrao);
            }
        });
    </script>
</body>
</html>
